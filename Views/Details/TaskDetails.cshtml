
<h3 style="font-size: 4em; text-align: center;" class=" mt-3">Task: @ViewBag.CurrentTask.Name</h3>

<div class="row mt-3">
    <div class="col-sm-12 p-3 mb-2 bg-secondary" style="height: 200px;">
        <h3 style="text-align: center;">Description</h3>
        <hr>
        <p style="text-align: center;">@ViewBag.CurrentTask.Description</p>
    </div>
</div>

<div class="row mt-3">
    <div class="col-sm-3 p-3 mb-2 bg-secondary" style="height: 300px; text-align: center;">
        <h3 style="text-align: center;">Task Dates:</h3>
        <hr>
        <br>
        <h5>Start : </h5>
        <h6>@ViewBag.CurrentTask.StartTime.ToString("MMMM dd @ hh:mm tt")</h6>
        <br>
        <h5>End : </h5>
        <h6>@ViewBag.CurrentTask.EndTime.ToString("MMMM dd @ hh:mm tt")</h6>
    </div>


    <div class="col-sm-5 p-1 mb-2 bg-secondary mx-auto" style="height: 300px;">
        <iframe src = 'https://www.google.com/maps/embed/v1/place?key=AIzaSyBCnCe8iUWcI6SQtR3K04u3lVDrblCLgcU&q=@ViewBag.CurrentTask.Loc.Lat,@ViewBag.CurrentTask.Loc.Lng' width = "100%" height="100%" frameBorder="0"></iframe>
    </div>


    <div class="col-sm-3 p-3 mb-2 bg-secondary" style=" min-height: 300px; text-align: center;">
        <h3 style="text-align: center;">Volunteers</h3>
        <hr>
            @foreach(var person in @ViewBag.CurrentTask.TaskVolunteers)
            {
                @if(person == null)
                {
                    break;
                }
                <h5>@person.User.FirstName</h5>
            }
    </div>
</div>

<div class="row mt-3 text-center">
    <a asp-controller="Details" asp-action="Dashboard" class="btn btn-primary mx-auto" asp-route-id="@ViewBag.ConfirmedEvent.EventId"> Event Details</a>
</div>
